<h2 align="center">
Title: <%= @article.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
	<% if @article.user %>
		<span><small>Created by: <%= link_to @article.user.username, user_path(@article.user) %></small></span>
	<% end %>
	<h4 class="center"><strong>Description:</strong></h4>
	<hr/>
	<%= @article.description %>
	<div class="article-actions">
		<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
		<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
		<%= link_to 'View all articles', articles_path, class: "btn btn-xs btn-success" %>
	</div>
</div>