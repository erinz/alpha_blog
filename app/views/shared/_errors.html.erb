<% if obj.errors.any? %>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-danger">
			<div class="panel-heading">
				<div class="panel-title">
					<%= pluralize(obj.errors.count, "error") %>
				</div>
				<div class="panel-body">
					<ul>
						<% obj.errors.full_messages.each do |msg|%>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>

	</div>
</div>
<% end %>